{
    "name": "Omnivox Mark Viewer",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Dont' worry about it",
    "background": {
        "scripts": ["js/jquery2.js", "js/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "images/icon.ico",
        "default_title": "Omnivox Mark Viewer",
        "default_popup": "popup.html"
    },
    "permissions": [
        "https://cegep-heritage.omnivox.ca/*",
        "tabs",
        "cookies",
        "alarms"
    ]
}