{
  "name": "My Anime List User Info Viewer",
  "version": "1.2",
  "manifest_version": 2,
  "description": "Fetches info for user being hovered over.",
  "content_scripts": [{
    "matches": ["http://myanimelist.net/*"],
    "js": ["jquery.js", "main.js", "show_user_info.js", "show_anime_image.js"],
    "run_at": "document_end"
  }],
  "web_accessible_resources": ["images/ajax-loader.gif"]
}
